<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_first"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.classtest_activity.FirstActivity">

    <TextView
        android:id="@+id/tv_first_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <Button
        android:id="@+id/btn_first_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:onClick="login"
        android:text="登录" />

    <Button
        android:id="@+id/btn_first_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_first_login"
        android:layout_alignStart="@+id/btn_first_login"
        android:layout_below="@+id/btn_first_login"
        android:layout_marginTop="13dp"
        android:onClick="register"
        android:text="注册" />

    <Button
        android:id="@+id/btn_first_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_first_register"
        android:layout_alignStart="@+id/btn_first_register"
        android:layout_below="@+id/btn_first_register"
        android:layout_marginTop="17dp"
        android:onClick="other"
        android:text="其他" />

    <Button
        android:text="通讯录"
        android:onClick="contacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/btn_first_contacts" />
</RelativeLayout>
