<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/a86"
        android:layout_marginTop="14dp"
        android:id="@+id/iv_iteam_right"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ago"
        android:id="@+id/tv_iteam_right"
        android:layout_alignBottom="@+id/iv_iteam_right"
        android:layout_toLeftOf="@+id/iv_iteam_right"
        android:layout_toStartOf="@+id/iv_iteam_right"
        android:layout_alignTop="@+id/iv_iteam_right" />
</RelativeLayout>