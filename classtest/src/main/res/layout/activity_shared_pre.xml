<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".datastorage.SharedPreActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/btn_shard"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tv_shard"
        android:layout_below="@+id/btn_shard"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tv_shardVale"
        android:layout_below="@+id/tv_shard"
         />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="internalStorage"
        android:id="@+id/btn_shared_toInternalStorage"
        android:layout_alignTop="@+id/btn_shard"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cache"
        android:id="@+id/btn_shared_tocache"
        android:layout_below="@+id/tv_shardVale"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ExternalStorage"
        android:id="@+id/btn_shared_toexter"
        android:layout_alignTop="@+id/btn_shared_tocache"
        android:layout_alignRight="@+id/btn_shared_toInternalStorage"
        android:layout_alignEnd="@+id/btn_shared_toInternalStorage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tv_shared_message"
        android:layout_below="@+id/btn_shared_tocache"
        android:layout_toRightOf="@+id/btn_shard"
        android:layout_toEndOf="@+id/btn_shard" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="contentProvider"
        android:id="@+id/btn_shared_cp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btn_shared_tocache"
        android:layout_alignEnd="@+id/btn_shared_tocache" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="load 异步"
        android:id="@+id/btn_shard_cpload"
        android:layout_alignBottom="@+id/btn_shared_cp"
        android:layout_alignRight="@+id/btn_shared_toInternalStorage"
        android:layout_alignEnd="@+id/btn_shared_toInternalStorage" />
</RelativeLayout>
